section.intro.pt-5.pb-4 
  .container 
    .row 
      .col-lg-8
        #carouselExampleControls.carousel.slide(data-ride='carousel')
          .carousel-inner
            .carousel-item.intro__slider-container
              .intro__slide
                figure.slide__image.mb-0 
                  picture 
                    img.d-block.w-100(src='../images/slide-1-2.png' alt='Slider')
                .intro__content
                  .intro__content-wrapper 
                    h3.intro__subtitle Topsale Collection
                    h1.intro__title
                      | Best Lighting
                      br
                      | Collection
                    a.btn.btn-outline-white(href='/react/molla/demo-2/shop/sidebar/list/')
                      span SHOP NOW
                      i.las.la-long-arrow-alt-right
            .carousel-item.active.intro__slider-container
              .intro__slide
                figure.slide__image.mb-0 
                  picture 
                    img.d-block.w-100(src='../images/slide-2-2.png' alt='Slider')
                .intro__content
                  .intro__content-wrapper 
                    h3.intro__subtitle Topsale Collection
                    h1.intro__title
                      | Wood Cabinet
                      br
                      | Collection
                    a.btn.btn-outline-white(href='/react/molla/demo-2/shop/sidebar/list/')
                      span SHOP NOW
                      i.las.la-long-arrow-alt-right
          a.carousel-control-prev(href='#carouselExampleControls' role='button' data-slide='prev')
            span.carousel-control-prev-icon(aria-hidden='true')
            span.sr-only Previous
          a.carousel-control-next(href='#carouselExampleControls' role='button' data-slide='next')
            span.carousel-control-next-icon(aria-hidden='true')
            span.sr-only Next
      .col-lg-4